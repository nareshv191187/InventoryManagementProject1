<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name>InventoryManagementProject</display-name>

	<servlet>

	<servlet-name>saveDetails
		</servlet-name>
		<servlet-class>com.info.controller.SaveProductInformationServlet
		</servlet-class>
	</servlet>
    
    <servlet>
	<servlet-name>Login</servlet-name>
		<servlet-class>com.info.controller.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>saveDetails</servlet-name>
		<url-pattern>/saveDetails.do</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		 <welcome-file>/jsp/login.jsp</welcome-file>
	</welcome-file-list>
</web-app>